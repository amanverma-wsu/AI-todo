{
  "name": "serverless-todo-api-2025",
  "version": "1.0.0",
  "description": "Modern Serverless Todo API with GitOps & AI Integration (2025 Tech Stack)",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc && cdk synth",
    "deploy": "cdk deploy",
    "deploy:dev": "cdk deploy --require-approval=never --context environment=dev",
    "deploy:staging": "cdk deploy --require-approval=never --context environment=staging",
    "deploy:prod": "cdk deploy --context environment=prod",
    "diff": "cdk diff",
    "destroy": "cdk destroy",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "deps:check": "npm audit",
    "deps:fix": "npm audit fix",
    "local": "cdk synth --no-staging -o cdk.out && sam local start-api --template cdk.out/TodoApiStack.template.json"
  },
  "keywords": [
    "serverless",
    "todo",
    "aws",
    "lambda",
    "dynamodb",
    "bedrock",
    "gitops",
    "ai"
  ],
  "author": "DevOps Team",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.136",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "aws-cdk": "^2.131.0",
    "aws-cdk-lib": "^2.131.0",
    "constructs": "^10.3.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.0.0",
    "@aws-lambda-powertools/metrics": "^2.0.0",
    "@aws-lambda-powertools/tracer": "^2.0.0",
    "@aws-sdk/client-bedrock-runtime": "^3.548.0",
    "@aws-sdk/client-dynamodb": "^3.548.0",
    "@aws-sdk/client-eventbridge": "^3.548.0",
    "@aws-sdk/client-secrets-manager": "^3.548.0",
    "@aws-sdk/lib-dynamodb": "^3.548.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/auto-instrumentations-node": "^0.46.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.51.0",
    "@opentelemetry/instrumentation-aws-lambda": "^0.38.0",
    "@opentelemetry/instrumentation-http": "^0.51.0",
    "@opentelemetry/sdk-node": "^0.51.0",
    "uuid": "^9.0.1"
  }
}
